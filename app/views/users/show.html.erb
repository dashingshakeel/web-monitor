      <%= render 'shared/add_supervisor' %>

<div class="left-supervisors">
<button class="btn btn-primary btn-bordered" id="button2">Add Supervisor</button>
  <table>
  <thead>
    <tr>
      <th>Name</th>
      <th>URL:</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @supervisors.each do |supervisor| %>
      <tr>
          <td><%= link_to supervisor.name, supervisor %></td>
        <td class="url"><%= supervisor.url %></td>
    
        <td><%= link_to 'Edit', edit_supervisor_path(supervisor) %></td>
        <td><%= link_to 'x', supervisor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


</div>


